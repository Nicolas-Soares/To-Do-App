<div id="main-area">
    <div id="task-list">
        <h1>These are your Tasks</h1>
        <ul>
            {{#each content}}
                <li>{{this}} <input type="checkbox" name="taskCheck"></li>
            {{/each}}
        </ul>
    </div>
    <form method="POST">
        <input type="text" name="name" id="taskname" placeholder="Task name...">
        <button type="submit">+</button>
    </form>
</div>
<style>
    #task-list {
        display: flex;
        flex-direction: column;
        align-items: center;
        height: 100%;
        min-width: 30%;
    }
</style>