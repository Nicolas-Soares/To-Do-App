<div id="main-area">
    <div id="signIn-area">
        <h1>Sign In</h1>
        <form action="/create-account" method="POST">
            <input type="text" name="username" required placeholder="Your username..." minlength="3"><br>
            <input type="email" name="email" required placeholder="Your email..."><br>
            <input type="password" name="password" required placeholder="Your password..." minlength="5"><br>
            <button type="submit">Sign In</button>
        </form>
    </div>
</div>